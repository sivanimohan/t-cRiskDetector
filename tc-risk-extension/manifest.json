{
  "manifest_version": 3,
  "name": "T&C Risk Detector",
  "version": "1.0",
  "description": "Detects risk levels in Terms & Conditions.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["http://localhost:5000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
